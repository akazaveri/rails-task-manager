<div class="container mt-5">
  <h1>My tasks</h1>
  <br>
  <div>
    <% @tasks.each do |task| %>
      <div id="list" class="d-flex flex-row align-items-center mb-3">
        <% if task[:completed] %>
          <i class="fa-regular fa-square-check"></i>
        <% else  %>
          <i class="fa-regular fa-square"></i>
        <% end %>
        <p class="m-0 ps-2"><%= link_to task["title"], task_path(task)%></p>
      </div>
    <% end %>
    <br>
    <%= link_to "Add task", new_task_path %>

  </div>
</div>
